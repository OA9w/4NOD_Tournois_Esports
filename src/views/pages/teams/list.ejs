<%- include('../../partials/head', { title: 'Équipes' }) %>

<body class="bg-gray-100 min-h-screen flex flex-col">
<%- include('../../partials/header') %>

<main class="container mx-auto py-8 px-4 grow">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Équipes</h1>

    <% if (!teams || teams.length === 0) { %>
        <div class="bg-white rounded-lg shadow p-6 text-gray-600">
            Aucune équipe pour le moment.
        </div>
    <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% teams.forEach(team => { %>
                <a href="/teams/<%= team.id %>" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition">
                    <div class="flex items-start justify-between">
                        <div>
                            <h2 class="text-xl font-semibold text-gray-800"><%= team.name %></h2>
                            <p class="text-gray-600 mt-1">Tag: <span class="font-medium"><%= team.tag %></span></p>
                        </div>
                        <span class="text-sm bg-gray-100 text-gray-700 px-3 py-1 rounded-full">
                #<%= team.id %>
              </span>
                    </div>
                </a>
            <% }) %>
        </div>
    <% } %>
</main>

<%- include('../../partials/footer') %>
</body>
</html>
