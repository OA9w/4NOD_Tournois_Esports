<%- include('../../partials/head', { title: team ? 'Modifier ' + team.name : 'Nouvelle équipe' }) %>

<body class="bg-gray-100 min-h-screen flex flex-col">
<%- include('../../partials/header') %>

<main class="container mx-auto py-8 px-4 grow">
    <a href="/teams" class="inline-flex items-center gap-1 text-blue-500 hover:text-blue-700 mb-6">
        <%- icon('ArrowLeft', { size: 18 }) %>
        Retour a la liste
    </a>

    <div class="bg-white rounded-lg shadow-lg p-8 max-w-2xl">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">
            <%= team ? 'Modifier équipe' : 'Ajouter une équipe' %>
        </h1>

        <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                <p class="font-bold">Erreurs de validation :</p>
                <ul class="list-disc list-inside mt-2">
                    <% errors.forEach(error => { %>
                        <li><%= error.message %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form method="POST" action="<%= team ? '/teams/' + team.id + '/edit' : '/teams/new' %>" class="space-y-6">
            <div>
                <label for="name" class="block text-gray-700 font-medium mb-2">Nom de l'équipe *</label>
                <input
                        type="text"
                        id="name"
                        name="name"
                        value="<%= (typeof formData !== 'undefined' && formData.name) || (team && team.name) || '' %>"
                        class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        minlength="3"
                        maxlength="50"
                        required
                >
            </div>

            <div>
                <label for="tag" class="block text-gray-700 font-medium mb-2">Tag (MAJ + chiffres) *</label>
                <input
                        type="text"
                        id="tag"
                        name="tag"
                        value="<%= (typeof formData !== 'undefined' && formData.tag) || (team && team.tag) || '' %>"
                        placeholder="Ex: ALPHA"
                        class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent uppercase"
                        minlength="3"
                        maxlength="5"
                        pattern="^[A-Z0-9]+$"
                        required
                >
                <p class="text-sm text-gray-500 mt-1">3 à 5 caractères, uniquement MAJUSCULES et chiffres.</p>
            </div>

            <div class="flex gap-4">
                <button
                        type="submit"
                        class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-6 rounded-lg transition-colors"
                >
                    <%= team ? 'Enregistrer' : 'Créer' %>
                </button>
                <a
                        href="/teams"
                        class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-6 rounded-lg transition-colors"
                >
                    Annuler
                </a>
            </div>
        </form>
    </div>
</main>

<%- include('../../partials/footer') %>
</body>
</html>
