<%- include('../../partials/head', { title: 'Inscriptions' }) %>

<body class="bg-gray-100 min-h-screen flex flex-col">
<%- include('../../partials/header') %>

<main class="container mx-auto py-8 px-4 grow">
    <a href="/tournaments/<%= tournament.id %>" class="text-blue-600 hover:underline">← Retour tournoi</a>

    <div class="bg-white rounded-lg shadow p-6 mt-4">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
            Inscriptions — <%= tournament.name %>
        </h1>

        <% if (!registrations || registrations.length === 0) { %>
            <p class="text-gray-600 mt-4">Aucune inscription.</p>
        <% } else { %>
            <div class="overflow-x-auto mt-4">
                <table class="min-w-full text-left">
                    <thead>
                    <tr class="border-b">
                        <th class="py-2 pr-4">ID</th>
                        <th class="py-2 pr-4">Type</th>
                        <th class="py-2 pr-4">Participant</th>
                        <th class="py-2 pr-4">Statut</th>
                        <th class="py-2 pr-4">Inscrit le</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% registrations.forEach(r => { %>
                        <tr class="border-b">
                            <td class="py-2 pr-4"><%= r.id %></td>
                            <td class="py-2 pr-4"><%= r.teamId ? 'TEAM' : 'SOLO' %></td>
                            <td class="py-2 pr-4">
                                <% if (r.team) { %>
                                    <%= r.team.name %> (<%= r.team.tag %>)
                                <% } else if (r.player) { %>
                                    <%= r.player.username %> (<%= r.player.email %>)
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                            <td class="py-2 pr-4"><%= r.status %></td>
                            <td class="py-2 pr-4"><%= new Date(r.registeredAt).toLocaleString() %></td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</main>

<%- include('../../partials/footer') %>
</body>
</html>
